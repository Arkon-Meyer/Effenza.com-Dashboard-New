# -------------------------------------------------------
# Core app settings
# -------------------------------------------------------
NODE_ENV=development
PORT=3000

# -------------------------------------------------------
# Postgres connection (local dev via Docker)
# -------------------------------------------------------
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_DB=effenza
POSTGRES_USER=effenza
POSTGRES_PASSWORD=effenza

# Optional PG pool tuning
PG_POOL_MAX=10
PG_IDLE_TIMEOUT_MS=30000
PG_CONN_TIMEOUT_MS=5000
POSTGRES_SSL=false
POSTGRES_SSL_REJECT_UNAUTHORIZED=true

# -------------------------------------------------------
# JWT / Auth
# -------------------------------------------------------
# Generate a strong secret for prod, e.g.:
#   openssl rand -hex 32
JWT_SECRET=change-me-in-production

# Refresh-cookie settings
COOKIE_SECURE=false
COOKIE_DOMAIN=

# -------------------------------------------------------
# Demo user seeding (scripts/seed_demo_user.js)
# -------------------------------------------------------
DEMO_USER_EMAIL=demo.user@example.com
DEMO_USER_PASSWORD=test
DEMO_USER_NAME=Demo User
