{
  "terminal.integrated.profiles.linux": {
    "Bash (helpers)": {
      "path": "/bin/bash",
      "args": [
        "-lc",
        "source '${workspaceFolder}/scripts/dev-helpers.sh' || true; echo '[helpers] loaded (gsync, app-restart, free-port, health)'; exec bash -i"
      ],
      "overrideName": true
    },
    "Bash (clean)": {
      "path": "/bin/bash",
      "args": ["--noprofile", "--norc"],
      "overrideName": true
    },
    "sh (clean)": {
      "path": "/bin/sh",
      "args": ["-i"],
      "overrideName": true
    }
  },
  "terminal.integrated.defaultProfile.linux": "Bash (helpers)",
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.shellIntegration.enabled": false
}
