{
  "terminal.integrated.profiles.linux": {
    "Bash (init)": {
      "path": "/bin/bash",
      "args": ["--noprofile", "--norc", "--init-file", "${workspaceFolder}/.vscode/terminal-init.sh", "-i"],
      "overrideName": true
    },
    "Bash (clean)": {
      "path": "/bin/bash",
      "args": ["--noprofile", "--norc"],
      "overrideName": true
    },
    "sh (clean)": {
      "path": "/bin/sh",
      "args": ["-i"],
      "overrideName": true
    }
  },
  "terminal.integrated.defaultProfile.linux": "Bash (init)",
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.shellIntegration.enabled": false
}
